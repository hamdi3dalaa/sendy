rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Menu item images
    match /menu_items/{restaurantId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null &&
                      request.auth.uid == restaurantId;
    }

    // User ID card images (for delivery/restaurant approval)
    match /id_cards/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                      request.auth.uid == userId;
    }

    // User profile images
    match /profile_images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Restaurant images
    match /restaurant_images/{restaurantId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == restaurantId;
    }

    // Default: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
